<div class="mt-4">
    <h3>Cập nhật video</h3>
    <form class="mt-4" method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên video</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Nhập video...">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" id="description" name="description" placeholder="Nhập mô tả...">
        </div> 
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" id="videoId" name="videoId" placeholder="Nhập video ID...">
        </div> 
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" id="level" name="level" placeholder="Nhập trình độ...">
        </div>         
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>    
</div>